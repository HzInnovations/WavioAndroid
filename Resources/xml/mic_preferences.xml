<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

  <android.support.v7.preference.PreferenceCategory android:title="Mic Settings">
   <android.support.v7.preference.PreferenceScreen android:key="preference_mic_button_sounds"
                      android:title="Add or Update Sounds"
                      android:summary="Record, edit, or delete the sounds this microphone recognizes.">
    </android.support.v7.preference.PreferenceScreen>

    <android.support.v7.preference.PreferenceScreen android:key="preference_mic_button_sensitivity"
                      android:title="Sensitivity"
                      android:summary="Change the sound detection sensitivity.">
    </android.support.v7.preference.PreferenceScreen>
        
    <android.support.v7.preference.PreferenceScreen android:key="preference_mic_button_restore"
                      android:title="Restore all nofitications"
                      android:summary="Download this microphones previous notifications">
    </android.support.v7.preference.PreferenceScreen>

    <android.support.v7.preference.PreferenceScreen android:key="preference_mic_button_delete"
                  android:title="Delete Mic"
                  android:summary="Remove this mic from your android and stop receiving notifications">
    </android.support.v7.preference.PreferenceScreen>
    
  </android.support.v7.preference.PreferenceCategory>

  


</android.support.v7.preference.PreferenceScreen>